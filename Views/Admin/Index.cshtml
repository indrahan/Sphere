@{
    ViewData["Title"] = "Admin";
}

<h2>Admin Panel</h2>
<p>
    @if (ViewBag.OutOfStockCount > 0)
    {
        <a class="btn btn-warning" asp-controller="Admin" asp-action="Statistics">Statistics <span class="badge">@ViewBag.OutOfStockCount</span></a>
    }
    else
    {
        <a class="btn btn-success" asp-controller="Admin" asp-action="Statistics">Statistics</a>
    }
    <a class="btn btn-primary" asp-controller="Laptop" asp-action="IndexAdmin">Manage laptops</a>
    <a class="btn btn-primary" asp-controller="Users" asp-action="Index">Manage users</a>
    <a class="btn btn-primary" asp-controller="Cart" asp-action="Index2">Manage cart items</a>
    <a class="btn btn-primary" asp-controller="Wishlist" asp-action="Index">Manage Wishlist items</a>
</p>
<hr />
@if (ViewBag.OutOfStockCount > 0)
{
    <div class="alert alert-danger aler-dismisssible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        <strong>There are @ViewBag.OutOfStockCount products out of stock!</strong>
         
        <a asp-controller="Admin" asp-action="ProductsOutOfStock">See the list</a>
    </div>
}

<form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="Post">
    <div class="form-group">
        <h3>Upload CSV:</h3>
            <input type="file" name="files" multiple />
            <br />
            <a class="btn btn-primary" href="#myModal" role="button" class="btn btn-custom" data-toggle="modal">Upload</a>
    </div>
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Are you sure?</h4>
                    </div>
                    <div class="modal-body">
                        <form id="my-form">
                            <button type="submit" class="btn btn-success"  value="Upload" class="pull-left" data-toggle="modal" data-target="#myModal">Yes</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">No</button>
                            <br />
                        </form>        
                    </div>
                </div>
            </div>
        </div>
</form>
<hr />